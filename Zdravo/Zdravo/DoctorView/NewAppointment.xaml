<Window x:Class="Zdravo.NewAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo"
        
        mc:Ignorable="d"
        Title="NewAppointment" Height="506" Width="478" FontSize="15">

    <Window.Resources>
        <ControlTemplate x:Key="validationTemplate">
            <Grid Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <AdornedElementPlaceholder Grid.Column="0" Grid.Row="0" x:Name="textBox"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding [0].ErrorContent}" Foreground="Red"/>
            </Grid>
        </ControlTemplate>

    </Window.Resources>


    <Grid Margin="0,0,0,-6" Background="#FFACC3EE" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="364*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Pacijent" Margin="6,7,10,394" Grid.ColumnSpan="2" Background="#FF6197C6"/>
        <Label Content="JMBG:" HorizontalAlignment="Left" Margin="42,36,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"  
                  x:Name="patientId_tb" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Background="#FFE7D2D2" Grid.Column="1" Height="25" >
            <Binding Path="PatientId" UpdateSourceTrigger="PropertyChanged"  Mode="TwoWay">
                <Binding.ValidationRules>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <Label Content="Sala:" HorizontalAlignment="Left" Margin="47,235,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.293,0.522"/>
        <CheckBox IsChecked="{Binding Emergency}" x:Name="emergency_cb" Content="Hitno" HorizontalAlignment="Left" Margin="99,283,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="patientButton" Content="Pregled Pacijenta" HorizontalAlignment="Left" Margin="225,36,0,0" VerticalAlignment="Top" Height="29" Width="104" Click="Patient_Click" Grid.Column="1" FontSize="12" Background="MidnightBlue" Foreground="White"/>

        <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
                 x:Name="hour_tb"  Margin="182,145,131,285" Grid.Column="1">
            <Binding Path="Hour" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="24"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
                 x:Name="minutes_tb"  Margin="273,146,42,285" Grid.Column="1">
            <Binding Path="Minutes" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="60"/>

                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <Label Content="^" HorizontalAlignment="Left" Margin="199,114,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="^" HorizontalAlignment="Left" Margin="200,193,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.355"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="^" HorizontalAlignment="Left" Margin="289,114,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="^" HorizontalAlignment="Left" Margin="290,193,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.355"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="Schedule" Content="" Margin="52,316,252,105" Click="ScheduleButton_Click" Grid.Column="1" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/images/accept.png"/>
            </Button.Background>
        </Button>
        <Button Content="" Margin="143,315,160,105" Click="CancelButton_Click" Grid.Column="1" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/images/cancel.png"/>
            </Button.Background>
        </Button>
        <ComboBox x:Name="rooms_cb" SelectedItem="{Binding RoomId}" ItemsSource="{Binding Rooms}" Margin="110,239,276,0" VerticalAlignment="Top" RenderTransformOrigin="4.783,1.026" Grid.ColumnSpan="2"/>
        <Label Content="Trajanje:" HorizontalAlignment="Left" Margin="183,236,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            x:Name="duration_tb" HorizontalAlignment="Left" Margin="246,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="63" Background="#FFE7D2D2" Height="32" Grid.Column="1">
            <Binding Path="Duration" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <GroupBox Header="Datum" Margin="20,102,221,260" Grid.ColumnSpan="2" Background="#FF6197C6">

        </GroupBox>
        <GroupBox Header="Vreme" Margin="149,101,14,260" Grid.Column="1" Background="#FF6197C6"/>
        <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="hour_tb_Copy"  Margin="182,145,131,296" Grid.Column="1">
            <Binding Path="Hour" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="24"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            x:Name="minutes_tb_Copy"  Margin="273,146,42,296" Grid.Column="1">
            <Binding Path="Minutes" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="60"/>

                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="day_tb"  Margin="34,153,35,286">
            <Binding Path="Day" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="1" Max="31"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="month_tb"  Margin="97,154,335,286" Grid.ColumnSpan="2">
            <Binding Path="Month" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="1" Max="12"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="year_tb"  Margin="49,154,237,286" Grid.Column="1">
            <Binding Path="Year" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                    <local:NumericValidation ValidationStep="RawProposedValue"/>
                    <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="2022" Max="2050"/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <Label Content="/" FontSize="10pt" HorizontalAlignment="Left" Margin="77,156,0,274" Height="39" RenderTransformOrigin="1.294,-0.653"/>
        <Label Content="/" FontSize="10pt" HorizontalAlignment="Left" Margin="29,156,0,274" RenderTransformOrigin="25.685,0.599" Height="39" Grid.Column="1"/>
        <Label Content="Dan" HorizontalAlignment="Center" Margin="0,129,0,0" VerticalAlignment="Top"/>
        <Label Content="Mesec" HorizontalAlignment="Left" Margin="96,130,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="Godina" HorizontalAlignment="Left" Margin="64,130,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content=":" FontSize="10pt" HorizontalAlignment="Left" Margin="245,146,0,284" RenderTransformOrigin="25.685,0.599" Height="39" Grid.Column="1"/>

    </Grid>


</Window>
