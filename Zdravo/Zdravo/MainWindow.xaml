<Window x:Class="Zdravo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo"
        mc:Ignorable="d"
        Title="MainWindow" Height="244" Width="360"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,3">
        <TextBox Name="tbUsername"  HorizontalAlignment="Left" Margin="67,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Height="30"/>
        <PasswordBox Name="tbPassword" HorizontalAlignment="Left" Margin="67,109,0,0" VerticalAlignment="Top" Width="208" Height="28"/>
        <Button Content="Log in&#xD;&#xA;" HorizontalAlignment="Left" Margin="137,170,0,0" VerticalAlignment="Top" Height="26" Width="87" Click="Button_Click"/>
        <Label Content="Username" FontFamily="Italic" HorizontalAlignment="Left" Margin="67,18,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" FontFamily="Italic" HorizontalAlignment="Left" Margin="67,83,0,0" VerticalAlignment="Top"/>
        <Label Content="" Name="errorLabel" HorizontalAlignment="Left" Margin="67,142,0,0" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold"/>
    </Grid>
</Window>
