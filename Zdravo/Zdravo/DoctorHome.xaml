<Window x:Class="Zdravo.DoctorHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo"
        mc:Ignorable="d"  Loaded="Window_Loaded"
        Title="DoctorHome" Height="564" Width="1042" FontSize="17" FontFamily="Microsoft YaHei UI" >
    <Window.Resources>
        <ControlTemplate x:Key="validationTemplate">
            <Grid Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <AdornedElementPlaceholder Grid.Column="0" Grid.Row="0" x:Name="textBox"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding [0].ErrorContent}" Foreground="Red"/>
            </Grid>
        </ControlTemplate>

    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="624*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="3">
            <TabItem Header="Pregledi" FontFamily="Yu Gothic">

                <Grid Background="#FF373F47" Height="514" Margin="0,0,-4,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="31*"/>
                        <ColumnDefinition Width="270*"/>
                        <ColumnDefinition Width="493*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Opcije" Margin="10,10,15,310" Grid.ColumnSpan="2" Background="#FFAAABBC">
                        <Grid Margin="0,0,127,0">
                            <Label Content="Nov pregled" Margin="221,99,-103,10" RenderTransformOrigin="1.211,0.422">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="-210.821"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Button  Margin="22,13,115,63" Click="NewAppointment_Click" BorderBrush="{x:Null}" Foreground="{x:Null}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/images/addNew.png"/>
                                </Button.Background>
                            </Button>
                            <Button  Margin="242,13,-116,63" BorderBrush="{x:Null}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/images/list.png"/>
                                </Button.Background>
                            </Button>
                            <Button  Margin="137,13,0,63" Click="Referral_Click" BorderBrush="{x:Null}" Foreground="{x:Null}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/referral.png"/>
                                </Button.Background>
                            </Button>
                            <Label Content="Uput" Margin="369,99,-243,10" RenderTransformOrigin="1.211,0.422">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="-210.821"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>

                        </Grid>

                    </GroupBox>
                    <GroupBox Header="Odabir vremena" Margin="5,209,15,67" Grid.ColumnSpan="2" Background="#FF6C91C2" Foreground="White">
                        <Grid>
                            <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="hour_tb"  Margin="105,135,203,57">
                                <Binding Path="Hour" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                                        <local:NumericValidation ValidationStep="RawProposedValue"/>
                                        <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="24"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                            <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            x:Name="minutes_tb"  Margin="196,136,114,37">
                                <Binding Path="Minutes" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:NumericValidation ValidationStep="RawProposedValue"/>
                                        <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                                        <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="60"/>

                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                            <Label Content="^" HorizontalAlignment="Left" Margin="122,104,0,0" VerticalAlignment="Top"/>
                            <Label Content="^" HorizontalAlignment="Left" Margin="123,183,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180.355"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Label Content="^" HorizontalAlignment="Left" Margin="212,104,0,0" VerticalAlignment="Top"/>
                            <Label Content="^" HorizontalAlignment="Left" Margin="207,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="35" Width="29">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180.355"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <TextBox  Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="hour_tb_Copy"  Margin="105,135,203,37">
                                <Binding Path="Hour" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:NumericValidation ValidationStep="RawProposedValue"/>
                                        <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="24"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                            <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            x:Name="minutes_tb_Copy"  Margin="196,136,114,38">
                                <Binding Path="Minutes" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <local:RequiredFieldValidation ValidationStep="RawProposedValue"/>
                                        <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="0" Max="60"/>

                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                            <Label Content=":" FontSize="10pt" HorizontalAlignment="Left" Margin="168,150,0,38" RenderTransformOrigin="25.685,0.599" Height="39"/>

                        </Grid>
                    </GroupBox>

                    <DataGrid ColumnWidth="*" x:Name="AppointmentTable"
                              IsReadOnly ="True"  SelectionMode="Single"
                              ItemsSource="{Binding Appointments, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False"
                              Margin="353,27,0,67" Grid.Column="1" HorizontalAlignment="Left" Width="617" Background="#FFDCE1DE" Grid.ColumnSpan="2" >
                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasPassed}" Value="true">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="2" Binding="{Binding Id}" MaxWidth="0"/>
                            <DataGridTextColumn Header="JMBG" Binding="{Binding Patient}"/>
                            <DataGridTextColumn Header="Prostorija" Binding="{Binding Room}"  />
                            <DataGridTextColumn Header="Datum" Width="1*" Binding="{Binding Date}" />
                            <DataGridTextColumn Header="Vreme" Binding="{Binding Time}"/>
                            <DataGridTextColumn Header="Trajanje" Binding="{Binding Duration}" />
                            <DataGridTextColumn Header="Hitno" Binding="{Binding EmergencyChar}" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="DA">
                                                <Setter Property="Background" Value="Red"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                    <Button Grid.Column="2" Content="Log out" HorizontalAlignment="Left" Margin="441,452,0,0" VerticalAlignment="Top" Height="36" Width="176" Click="Button_Click"/>
                    <Label Content="Nov Pregled" Margin="42,161,547,213" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="1" Content="Zahtevi" HorizontalAlignment="Left" Margin="239,137,0,0" VerticalAlignment="Top"/>
                    <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            x:Name="day_tb"  Margin="15,272,284,204" Grid.Column="1">
                        <Binding Path="Day" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NumericValidation ValidationStep="RawProposedValue"/>
                                <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="1" Max="31"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>
                    <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="month_tb"  Margin="90,273,203,204" Grid.Column="1">
                        <Binding Path="Month" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NumericValidation ValidationStep="RawProposedValue"/>
                                <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="1" Max="12"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>
                    <TextBox Validation.ErrorTemplate="{StaticResource validationTemplate}"
            
        
            x:Name="year_tb"  Margin="169,273,84,204" Grid.Column="1">
                        <Binding Path="Year" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <local:NumericValidation ValidationStep="RawProposedValue"/>
                                <local:MinMaxValidation ValidationStep="ConvertedProposedValue" Min="2022" Max="2050"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>
                    <Label Content="/" FontSize="10pt" HorizontalAlignment="Left" Margin="75,273,0,202" Height="39" RenderTransformOrigin="1.294,-0.653" Grid.Column="1"/>
                    <Label Content="/" FontSize="10pt" HorizontalAlignment="Left" Margin="152,273,0,202" RenderTransformOrigin="25.685,0.599" Height="39" Grid.Column="1"/>
                    <Label Content="Dan" HorizontalAlignment="Left" Margin="18,246,0,0" VerticalAlignment="Top" Grid.Column="1" Height="32" Width="44"/>
                    <Label Content="Mesec" HorizontalAlignment="Left" Margin="89,247,0,0" VerticalAlignment="Top" Grid.Column="1" Height="32" Width="63"/>
                    <Label Content="Godina" HorizontalAlignment="Left" Margin="187,247,0,0" VerticalAlignment="Top" Grid.Column="1" Height="32" Width="69"/>

                </Grid>

            </TabItem>
            <TabItem Header="Kartoni">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Prostorije">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Lekovi">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Slobodni dani">
                <Grid Background="#FFE5E5E5">
                    <Rectangle Stroke="Black" Fill="#FF8B8982"/>
                    <GroupBox Header="Odaberite tip" Margin="103,42,103,337" Background="#FF373F47" Foreground="White" FontWeight="Normal">
                        <Grid>
                            <RadioButton Content="Godišnji odmor" HorizontalAlignment="Left" Margin="117,0,0,-12" Height="80" VerticalAlignment="Bottom" FontSize="30" Foreground="White"/>
                            <RadioButton Content="Bolovanje" HorizontalAlignment="Left" Margin="517,21,0,-20" FontSize="30" Foreground="White"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Odaberite vremenski period" Margin="51,176,51,130" Background="#FF6C91C2" Foreground="White">
                        <Grid>
                            <TextBox HorizontalAlignment="Left" Margin="122,27,0,71" TextWrapping="Wrap" Text="" Width="272"/>
                            <TextBox HorizontalAlignment="Left" Margin="545,27,0,71" TextWrapping="Wrap" Text="" Width="272"/>
                            <CheckBox Content="HITNO" Margin="407,111,295,-111" Foreground="White" FontSize="30"/>
                        </Grid>
                    </GroupBox>
                    <Grid>

                    </Grid>

                    <Button x:Name="Schedule" Content="" Margin="466,409,466,10" Click="VacationButton_Click" BorderBrush="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="/images/accept.png"/>
                        </Button.Background>
                    </Button>
                    <Label Content="-" Margin="504,206,466,204" Foreground="White" FontSize="60"/>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.ColumnSpan="2" Margin="0,508,534,0">
            <TextBlock x:FieldModifier="private" x:Name="myDateTime"/>
        </StatusBar>





    </Grid>
</Window>
