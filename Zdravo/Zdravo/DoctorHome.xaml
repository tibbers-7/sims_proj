<Window x:Class="Zdravo.DoctorHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo"
        mc:Ignorable="d"
        Title="DoctorHome" Height="450" Width="800" FontSize="15" FontFamily="Nirmala UI Semilight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="624*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="3">
            <TabItem Header="Pregledi">
                <Grid Background="#FFACC3EE" Height="387" Margin="0,0,-2,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="31*"/>
                        <ColumnDefinition Width="270*"/>
                        <ColumnDefinition Width="493*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Opcije" Margin="10,10,10,231" Grid.ColumnSpan="2" Background="#FF6197C6 ">
                        <Grid Margin="0,0,127,0">
                            <Button Content="" Margin="38,13,34,40" Click="NewAppointment_Click" BorderBrush="{x:Null}" Foreground="{x:Null}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/images/addNew.png"/>
                                </Button.Background>
                            </Button>
                            <Button Content="" Margin="153,13,-86,40" BorderBrush="{x:Null}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/images/list.png"/>
                                </Button.Background>
                            </Button>

                        </Grid>

                    </GroupBox>
                    <GroupBox Header="Odabir vremena" Margin="10,176,10,10" Grid.ColumnSpan="2" Background="#FF6197C6"/>

                    <DataGrid ColumnWidth="*" x:Name="AppointmentTable"
                              IsReadOnly ="True"  SelectionMode="Single"
                              ItemsSource="{Binding Appointments, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False"
                              Margin="0,10,0,46" Grid.Column="2" HorizontalAlignment="Left" Width="484" Background="#FFDADADA" >
                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasPassed}" Value="true">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="2" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="JMBG" Binding="{Binding Patient}"/>
                                <DataGridTextColumn Header="Prostorija" Binding="{Binding Room}"  />
                            <DataGridTextColumn Header="Datum" Width="1*" Binding="{Binding Date}" />
                            <DataGridTextColumn Header="Vreme" Binding="{Binding Time}"/>
                            <DataGridTextColumn Header="Trajanje" Binding="{Binding Duration}" />
                            <DataGridTextColumn Header="Hitno" Binding="{Binding EmergencyChar}" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="DA">
                                                <Setter Property="Background" Value="Red"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                    <Button Grid.Column="2" Content="Log out" HorizontalAlignment="Left" Margin="361,355,0,0" VerticalAlignment="Top" Height="22" Width="106" Click="Button_Click"/>


                </Grid>

            </TabItem>
            <TabItem Header="Kartoni">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Prostorije">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Lekovi">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Slobodni dani">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Label Content="Nov Pregled" Margin="38,146,481,172" Grid.ColumnSpan="2"/>
        <Label Content="Zahtevi" Grid.Column="1" Margin="100,146,345,-146"/>

    </Grid>
</Window>
