<Window x:Class="Zdravo.DoctorHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo"
        mc:Ignorable="d"
        Title="DoctorHome" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="624*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="3">
            <TabItem Header="Pregledi">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="301*"/>
                        <ColumnDefinition Width="493*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Opcije" Margin="10,10,10,271">
                        <Grid Margin="0,0,127,0">
                            <Button Content="Nov pregled" Margin="22,24,22,23" Click="NewAppointment_Click"/>
                            <Button Content="Zahtevi" Margin="149,24,-111,23"/>
                        </Grid>

                    </GroupBox>
                    <GroupBox Header="Odabir vremena" Margin="10,147,10,10"/>

                    <DataGrid x:Name="AppointmentTable"
                              IsReadOnly ="True"  SelectionMode="Single"
                              ItemsSource="{Binding Appointments, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False"
                              Margin="0,10,10,10" Grid.Column="1">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="JMBG" Binding="{Binding Patient}"/>
                            <DataGridTextColumn Header="Prostorija" Binding="{Binding Room}"  />
                            <DataGridTextColumn Header="Datum" Binding="{Binding Date}" />
                            <DataGridTextColumn Header="Vreme" Binding="{Binding Time}"/>
                            <DataGridTextColumn Header="Trajanje" Binding="{Binding Duration}" />
                            <DataGridTextColumn Header="Hitno" Binding="{Binding EmergencyChar}" />
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>

                </Grid>

            </TabItem>
            <TabItem Header="Kartoni">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Prostorije">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Lekovi">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Slobodni dani">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
