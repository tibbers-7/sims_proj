<Window x:Class="Zdravo.DoctorHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo"
        mc:Ignorable="d"
        Title="DoctorHome" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Pregledi">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="301*"/>
                        <ColumnDefinition Width="493*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Opcije" Margin="10,10,10,271">
                        <Grid Margin="0,0,127,0">
                            <Button Content="Zahtevi" Margin="149,24,-111,23"/>
                            <Button Content="Novi pregled" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="55" Width="101" Click="Button_Click"/>
                        </Grid>

                    </GroupBox>
                    <GroupBox Header="Odabir vremena" Margin="10,147,10,10">
                        <Grid>
                            <DatePicker HorizontalAlignment="Center" Width="190" Margin="0,10,0,165" RenderTransformOrigin="0.565,-1.254"/>
                            <TextBox Margin="64,106,152,76"></TextBox>
                            <TextBox Margin="155,107,63,76"/>
                            <Button Content="Obriši" Margin="13,189,152,10"></Button>
                            <Button Content="Prihvati" Margin="155,189,13,10"/>
                            <Label Content="^" HorizontalAlignment="Left" Margin="81,75,0,0" VerticalAlignment="Top"/>
                            <Label Content="^" HorizontalAlignment="Left" Margin="82,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180.355"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Label Content="^" HorizontalAlignment="Left" Margin="171,75,0,0" VerticalAlignment="Top"/>
                            <Label Content="^" HorizontalAlignment="Left" Margin="172,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180.355"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Label Content="^" HorizontalAlignment="Left" Margin="172,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180.355"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <Label Content=":" HorizontalAlignment="Left" Margin="131,114,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180.355"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                        </Grid>
                    </GroupBox>

                    <DataGrid x:Name="AppointmentTable"
                              IsReadOnly ="True"  SelectionMode="Single"
                              ItemsSource="{Binding Path=apCollection}"
                              Margin="0,10,10,10" Grid.Column="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="JMBG" />
                            <DataGridTextColumn Header="Sala" />
                            <DataGridTextColumn Header="Datum" />
                            <DataGridTextColumn Header="Vreme" />
                            <DataGridTextColumn Header="Trajanje" />





                        </DataGrid.Columns>

                    </DataGrid>

                </Grid>

            </TabItem>
            <TabItem Header="Kartoni">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Prostorije">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Lekovi">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Slobodni dani">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
