<Window x:Class="Zdravo.PatientView.EditAppointmentDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo.PatientView"
        mc:Ignorable="d"
        Title="EditAppointmentDate" Height="285" Width="451">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="99,73,0,0" TextWrapping="Wrap" FontSize="18" Text="Date:" VerticalAlignment="Top"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="209,73,0,0" VerticalAlignment="Top" Height="24" Width="126"/>
        <TextBlock HorizontalAlignment="Left" Margin="99,120,0,0" TextWrapping="Wrap" FontSize="18" Text="Time:" VerticalAlignment="Top"/>
        <TextBox x:Name="timeTb" HorizontalAlignment="Left" Margin="209,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="20" TextDecorations="Underline" Text="Reschedule appointment" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Height="23" Width="68" Click="Button_Click"/>

    </Grid>
</Window>
