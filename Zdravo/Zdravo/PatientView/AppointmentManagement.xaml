<Window x:Class="Zdravo.PatientView.AppointmentManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo.PatientView"
        mc:Ignorable="d"
        Title="AppointmentManagement" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid Name="table" ColumnWidth="*" IsReadOnly ="True"  SelectionMode="Single"
                              ItemsSource="{Binding Records, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Margin="68,61,109,39">
            <DataGrid.Columns>
                <DataGridTextColumn Width="0.3*" Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn  Header="Patient" Binding="{Binding PatientInfo}"/>
                <DataGridTextColumn  Header="Doctor" Binding="{Binding DoctorInfo}"/>
                <DataGridTextColumn  Header="Specialization" Binding="{Binding DoctorSpecialization}"/>
                <DataGridTextColumn  Header="Date" Binding="{Binding Date}"/>
                <DataGridTextColumn  Header="Time" Binding="{Binding Time}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
