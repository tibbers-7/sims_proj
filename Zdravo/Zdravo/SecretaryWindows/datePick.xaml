<Window x:Class="Zdravo.SecretaryWindows.datePick"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zdravo.SecretaryWindows"
        mc:Ignorable="d"
        Title="datePick" Height="235" Width="378" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="Pick date for room report" VerticalAlignment="Top" FontSize="22"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Height="30" Width="102" Click="Button_Click"/>

    </Grid>
</Window>
